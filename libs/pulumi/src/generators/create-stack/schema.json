        "environment": {
            "description": "",
            "type": "string",
            "aliases": [
                "env"
            ]
        },
        "stack": {
            "description": "Pulumi stack name",
            "type": "string"
        },
        "configurationStackFormat": {
            "type": "string"
        },
        "secretsProvider": {
            "type": "string"
        }
    },
    "required": [
        "projectName",
        "environment"
    ]
}
