{
    "$schema": "http://json-schema.org/schema",
    "cli": "nx",
    "$id": "CreateStack",
    "title": "",
    "type": "object",
    "properties": {
        "projectName": {
            "type": "string",
            "description": "The name of the project you want to deploy.",
            "alias": "p",
